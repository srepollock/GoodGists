<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.srepollock.goodgists">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme">
        <activity android:name=".MenuScreen"
            android:theme="@style/Theme.MaterialTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchScreen"
            android:parentActivityName=".MenuScreen">

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.srepollock.goodgists.MenuScreen" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".SearchResultsScreen">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".MyGists">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.srepollock.goodgists.MenuScreen" />
        </activity>
        <activity android:name=".StarredScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.srepollock.goodgists.MenuScreen" />
        </activity>
        <activity android:name=".AccountScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.srepollock.goodgists.MenuScreen" />
        </activity>
        <activity android:name=".LogoutScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.srepollock.goodgists.MenuScreen" />
        </activity>
        <activity android:name=".LoginScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.srepollock.goodgists.MenuScreen" />
        </activity>
    </application>

</manifest>